{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "The name of the new vm to be created."
            }
        },
        "newVMSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the new vm to be created."
            }
        },
        "userName": {
            "type": "string",
            "metadata": {
                "description": "The username for the local account that will be created on the new vm."
            }
        },
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the local account that will be created on the new vm."
            }
        }
    },
    "variables": {
        "vmName": "[variables('vmName')]",
        "labName": "devlab",
        "labSubnetName": "default",
        "labVirtualNetworkName": "[concat(variables('labName'), '-vnet')]",
        "labVirtualNetworkId": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', variables('labName'), variables('labVirtualNetworkName'))]",
        "resourceName": "[concat(variables('labName'), '/', variables('vmName'))]",
        "resourceType": "Microsoft.DevTestLab/labs/virtualMachines"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'), '-os')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Premium_LRS",
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 100
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'), '-data')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Premium_LRS",
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 100
            }
        },
        {
            "apiVersion": "2017-04-26-preview",
            "type": "Microsoft.DevTestLab/labs/virtualMachines",
            "name": "[variables('resourceName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "size": "[parameters('newVMSize')]",
                "isAuthenticationWithSshKey": false,
                "userName": "[parameters('userName')]",
                "sshKey": "",
                "password": "[parameters('password')]",
                "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
                "labSubnetName": "[variables('labSubnetName')]",
                "galleryImageReference": {
                    "Sku": "2016-Datacenter",
                    "OsType": "Windows",
                    "Publisher": "MicrosoftWindowsServer",
                    "Offer": "WindowsServer",
                    "Version": "latest"
                },
                "computeVm": {
                    "osDiskId": "[resourceId('Microsoft.Compute/disks', concat(parameters('vmName'), '-os'))]",
                    "dataDisks": [
                        {
                            "managedDiskId": "[resourceId('Microsoft.Compute/disks', concat(parameters('vmName'), '-data'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'), '-os'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'), '-data'))]"
            ]
        }
    ],
    "outputs": {
        "vmId": {
            "type": "string",
            "value": "[resourceId(variables('resourceType'), variables('labName'), variables('vmName'))]"
        }
    }
}